@model IEnumerable<GolfSrambleWeb.Models.TotalWinnings>
@using GolfSrambleWeb.Models
@{
    ViewBag.Title = "Index";
}

@Styles.Render("~/tables.css")

<div id="div1">
    <h2>Player Winnings</h2>

    <p>
        @Html.ActionLink("Add Player Winnings", "Create")
    </p>
@using (Html.BeginForm("Search","TotalWinnings"))
{
    @Html.Editor("Searchbox")
    <input type="submit" value="Search"/>
}
    <table class="table" id="MyTable">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Level)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.Truncate(item.FirstName, 8)
                    @*@Html.DisplayFor(modelItem => item.FirstName)*@
                </td>
                <td>
                    @Html.Truncate(item.LastName, 12)
                    @*@Html.DisplayFor(modelItem => item.LastName)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Level)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>